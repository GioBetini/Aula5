<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etQtdFaces"
        android:layout_width="239dp"
        android:layout_height="0dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="49dp"
        android:ems="10"
        android:hint="@string/qtdLados"
        android:inputType="numberSigned"
        android:textColor="@color/black"
        android:importantForAutofill="no"
        app:layout_constraintBottom_toTopOf="@+id/etQtdDados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etQtdDados"
        android:layout_width="231dp"
        android:layout_height="0dp"
        android:layout_marginBottom="88dp"
        android:ems="10"
        android:hint="@string/qtdDados"
        android:inputType="numberSigned"
        android:textColor="@color/black"
        android:importantForAutofill="no"
        app:layout_constraintBottom_toTopOf="@+id/btnRolar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etQtdFaces" />

    <Button
        android:id="@+id/btnRolar"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:layout_marginBottom="315dp"
        android:text="@string/rolar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etQtdDados" />

</androidx.constraintlayout.widget.ConstraintLayout>